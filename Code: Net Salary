#include<bits/stdc++.h>
using namespace std;

int main(){
	float basic_salary;
	scanf("%f",&basic_salary);
	printf("Basic salary:%f",basic_salary);
	
	float DA,HRA,PF,gross_salary;
	DA = basic_salary * (25/100);
	HRA = basic_salary * (15/100);
	gross_salary = basic_salary+DA+HRA;
	PF = gross_salary * (10/100);
	
	scanf("%f%f%f%f",&DA,&HRA,&gross_salary,&PF);
	
	float net_salary;
	net_salary = basic_salary + gross_salary;
	
	scanf("%f",&net_salary);
	printf("\nNet salary:%f",net_salary);
}
