/*Write a program to find the value of y for a particular value of n. 
The a, x, b, n is input by user
a. if n=1 y=ax%b 
b. if n=2 y=ax2+b2 
c. if n=3 y=a-bx 
d. if n=4 y=a+x/b.*/

#include<bits/stdc++.h>
using namespace std;

int main(){
	int a,x,b,n,y;
	cin>>a>>x>>b>>n;
	cout<<"The a, x, b and n:"<<a<<" "<<x<<" "<<b<<" "<<n<<endl;
	
	if(n==1){
		y=(a*x)%b;
		cout<<"y:"<<y<<endl;
	}
	else if(n==2){
		y=(a*x*x)+(b*b);
		cout<<"y:"<<y<<endl;
	}
	else if(n==3){
		y=a-(b*x);
		cout<<"y:"<<y<<endl;
	}
	else if(n==4){
		y=(a+x)/b;
		cout<<"y:"<<y<<endl;
	}
}
